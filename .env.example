# ==================================
# LinkedIn AI Agent - Environment Config
# ==================================

# Google Gemini API Key (required)
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/linkedin_agent

# Redis Configuration
# Used for caching and rate limiting
REDIS_URL=redis://localhost:6379

# Vector Database Configuration
# Option 1: ChromaDB (local development)
CHROMADB_PATH=./data/chromadb

# Option 2: Pinecone (production)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-east-1
# PINECONE_INDEX_NAME=linkedin-posts

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT=10  # requests per minute

# Cost Tracking
DAILY_COST_BUDGET=10.00

# Model Configuration
GEMINI_MODEL=gemini-2.0-flash
EMBEDDING_MODEL=text-embedding-004

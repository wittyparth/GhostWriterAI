# =============================================
# LinkedIn AI Agent - Environment Configuration
# =============================================
# Copy this file to .env and fill in your values

# ========== REQUIRED ==========

# Google Gemini API Key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# ========== OPTIONAL (defaults provided) ==========

# Gemini Model (default: gemini-2.0-flash)
# Options: gemini-2.0-flash, gemini-2.5-flash-preview-05-20, gemini-2.5-pro-preview-05-06, gemini-1.5-flash
GEMINI_MODEL=gemini-2.5-flash

# Embedding Model (default: text-embedding-004)
EMBEDDING_MODEL=text-embedding-004

# ========== DATABASE (Optional - uses SQLite by default) ==========

# PostgreSQL connection string (for production)
# Leave empty to use local SQLite database
# DATABASE_URL=postgresql://user:password@localhost:5432/linkedin_ai

# Neon PostgreSQL example:
# DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/linkedin_ai?sslmode=require

# ========== CACHING (Optional - uses in-memory by default) ==========

# Redis URL (for production)
# Leave empty to use in-memory cache
# REDIS_URL=redis://localhost:6379

# ========== VECTOR STORE ==========

# ChromaDB local storage path
CHROMADB_PATH=./data/chromadb

# Pinecone API key (optional, for production)
# PINECONE_API_KEY=your_pinecone_key

# Pinecone index name
PINECONE_INDEX_NAME=linkedin-posts

# ========== APPLICATION SETTINGS ==========

# Environment: development, staging, production
APP_ENV=development

# Enable debug mode (true/false)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ========== API SETTINGS ==========

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# Rate limit (requests per minute per user)
API_RATE_LIMIT=30

# ========== COST MANAGEMENT ==========

# Daily cost budget in USD
DAILY_COST_BUDGET=10.0

# ========== AGENT CONFIGURATION ==========

# Maximum retries for failed agent calls
MAX_AGENT_RETRIES=3

# Timeout for agent execution (seconds)
AGENT_TIMEOUT_SECONDS=60

# Maximum revision iterations
MAX_GENERATION_ITERATIONS=2
